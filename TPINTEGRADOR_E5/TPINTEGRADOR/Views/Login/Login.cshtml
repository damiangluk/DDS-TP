@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@{
    ViewData["Title"] = "Log in";
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/js/loginController.js")"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet"/>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
}

<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div>
                    <h1>Inicio de sesión</h1>
                    <form action="/Login/LoginAuth" method="post">
                        <!-- Campos y elementos del formulario -->
                        <input type="submit" value="Iniciar sesión con Auth0" class="btn btn-primary" style="margin-top: 10px;">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
