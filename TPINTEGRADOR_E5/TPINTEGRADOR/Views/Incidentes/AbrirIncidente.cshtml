@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/jstr/loginConoller.js")"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
}

<div class="container-incidentes">
    <div class="incidentes-title">
        <div class="rectangle-title">
            <span class="container-span-title"> Abrir incidente </span>
        </div>
    </div>
    <div class="incidentes-data">
        <div class="container-filters">
            <span class="span-filters">Servicio</span>
            <div class="mb-3">
                <select class="form-select" aria-label="Disabled select example">
                    <option selected>Seleccione el servicio</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <span class="span-filters">Informe</span>
            <div class="mb-3">
                <input class="form-input" placeholder="Ingrese el informe" aria-label="Disabled select example" />
            </div>
            <span class="span-filters">Localizacion</span>
            <div class="mb-3">
                <select class="form-select" aria-label="Disabled select example">
                    <option selected>Seleccione localización</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <button class="reportar-button">Reportar</button>
        </div>
    </div>
</div>
