@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@{
    ViewData["Title"] = "Incidentes";
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/jstr/loginConoller.js")"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
}

<div class="container-incidentes">
    <div class="incidentes-title">
        <div class="rectangle-title">
            <span class="container-span-title"> Incidentes </span>
        </div>
    </div>
    <div class="incidentes-data">
        <div class="container-filters">
            <h1>Filtros</h1>
            <span class="span-filters">Estado</span>
            <div class="mb-3">
                <select class="form-select" aria-label="Disabled select example">
                    <option selected>Seleccione estado</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="actions-filter">
                <button class="button">Buscar</button>
                <form class="agregar" asp-area="" asp-controller="Incidentes" asp-action="AbrirIncidente" method="post">
                    <button type="submit" class="button">Agregar</button>
                </form>
            </div>
        </div>
        <div class="container-table">
            <div class="informe-incidente">
                <span class="title-card">INFORME INCIDENTE 1 - ESTADO INCIDENTE 1</span>
                <div class="actions-incidente">
                    <button type="button" class="btn btn-info btn-100px">Solicitar revision</button>
                    <button type="button" class="btn btn-warning btn-50px">Editar</button>
                    <button type="button" class="btn btn-danger btn-50px">Cerrar</button>
                </div>
            </div>
            <div class="informe-incidente">
                <span class="title-card">INFORME INCIDENTE 2 - ESTADO INCIDENTE 2</span>
                <div class="actions-incidente">
                    <span class="description-card">Cerrado en: 17/10/2023 15:00</span>
                </div>
            </div>
            <div class="informe-incidente"></div>

        </div>
    </div>
</div>
