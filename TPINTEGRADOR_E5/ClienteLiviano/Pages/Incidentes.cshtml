@page
@model IncidentesModel
@{
    ViewData["Title"] = "Home page";
}


@section Scripts {
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/incidentesController.js" asp-append-version="true"></script>
}



<div class="text-center">
    <div class="container-incidentes">
        <div class="incidentes-title">
            <div class="rectangle-title">
                <span class="container-span-title"> Incidentes </span>
            </div>
        </div>
        <div class="incidentes-data">
            <div class="container-filters">
                <h1>Filtros</h1>
                <span class="span-filters">Estado</span>
                <div class="mb-3">
                    <select id="select-estado" class="form-select" aria-label="Disabled select example">
                        <option selected>Seleccione estado</option>
                        <option value="1">Abierto</option>
                        <option value="0">Cerrado</option>
                    </select>
                </div>
                <div class="actions-filter">
                    <button class="button" onclick="getAllIncidentes()">Buscar</button>
                    <button class="button" onclick="agregarIncidente">Agregar</button>
                </div>
            </div>
            <div id="incidentes-container" class="container-table">
            </div>
        </div>
    </div>
</div>
